CC      = @CC@
CFLAGS  = @CFLAGS@
LIBS    = @LIBS@
TOPDIR = @CONFIGURE_PWD@

XSLTPROC = @XSLTPROC@
XSLTMANSTYLE = @XSLTMANSTYLE@

prefix = @prefix@
exec_prefix = @exec_prefix@
datarootdir = @datarootdir@
datadir = @datadir@
bindir = @bindir@
includedir = @includedir@
libdir =  @libdir@
mandir = @mandir@

TOPDIR = @CONFIGURE_PWD@
NAME = @PACKAGE_NAME@
RELEASE = @RELEASE@
RPMBUILD = rpmbuild
INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
VERSION = $(shell cut -f1 $(TOPDIR)/VERSION | tr -d '\n')
RPMDIR = RPMBUILD

VERSION = $(shell cut -f1 @CONFIGURE_PWD@/VERSION | tr -d '\n')
NAME = @PACKAGE_NAME@

SRCS = fbitconvert.c
HDRS = nffile.h

all: fbitconvert


fbitconvert: $(SRCS)
	$(CC) $(CFLAGS) $(LIBS) -o $@ $<

%.1 %.2 %.3 %.4 %.5 %.6 %.7 %.8 %.9: %.dbk
	@if [ -n "$(XSLTPROC)" ]; then \
		if [ -f "$(XSLTMANSTYLE)" ]; then \
			echo $(XSLTPROC) $(XSLTMANSTYLE) $<; \
			$(XSLTPROC) $(XSLTMANSTYLE) $<; \
		else \
			echo "Missing $(XSLTMANSTYLE)!"; \
			exit 1; \
		fi \
	else \
		echo "Missing xsltproc"; \
	fi



.PHONY: install
install: fbitconvert
	[ -d $(DESTDIR)/$(bindir) ] || \
		(mkdir -p $(DESTDIR)/$(bindir); chmod 755 $(DESTDIR)/$(bindir));
	$(INSTALL_PROGRAM) fbitconvert $(DESTDIR)/$(bindir)/;

.PHONY: dist
dist: tarball rpm

.PHONY: tarball
tarball: $(SRCS) $(HDRS) $(PHDRS)
	@rm -rf $(NAME)-$(VERSION); \
	mkdir $(NAME)-$(VERSION); \
	rm -rf $(RPMDIR)/SOURCES/; \
        mkdir -p $(RPMDIR)/SOURCES/; \
	for i in $(SRCS) $(HDRS) $(CONF) configure.in configure Makefile.in VERSION \
		$(NAME).spec.in install-sh; do \
		[ "$$i" != "$${i%/*}" -a ! -d $(NAME)-$(VERSION)/$${i%/*} ] && mkdir -p $(NAME)-$(VERSION)/$${i%/*}; \
		cp $$i $(NAME)-$(VERSION)/$$i; \
	done;
	tar -c -z -f $(RPMDIR)/SOURCES/$(NAME)-$(VERSION)-$(RELEASE).tar.gz \
	    $(NAME)-$(VERSION);
	@rm -rf $(NAME)-$(VERSION);

.PHONY: rpm
rpm: tarball $(NAME).spec
	@mkdir -p $(RPMDIR)/BUILD $(RPMDIR)/RPMS $(RPMDIR)/SOURCES $(RPMDIR)/SPECS $(RPMDIR)/SRPMS;
	$(RPMBUILD) -ba $(NAME).spec \
		--define "_topdir `pwd`/$(RPMDIR)"

.PHONY: cleanall
cleanall: clean distclean

.PHONY: clean
clean:
	rm -f *.o fbitconvert;

.PHONY: distclean
distclean:
	rm -rf $(RPMDIR)
