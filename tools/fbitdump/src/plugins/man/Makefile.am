
MANSRC = fbitdump-plugins.dbk

EXTRA_DIST = $(MANSRC)

man_MANS = fbitdump-plugins.7

CLEANFILES = fbitdump-plugins.7

%.7: %.dbk
	@if [ -n "$(XSLTPROC)" ]; then \
		if [ -f "$(XSLTMANSTYLE)" ]; then \
			echo $(XSLTPROC) $(XSLTMANSTYLE) $<; \
			$(XSLTPROC) $(XSLTMANSTYLE) $<; \
		else \
			echo "Missing $(XSLTMANSTYLE)!"; \
			exit 1; \
		fi \
	else \
		echo "Missing xsltproc"; \
	fi

