################################################
# Makefile for the ipfixcol input plugin test  #
################################################

CC      = @CC@
CFLAGS  = @CFLAGS@
LIBS    = @LIBS@
INCLUDE = "-I../../../"

all: udp_input.so

# udp_input.so
udp_input.so: udp_input.o
	$(CC) $(CFLAGS) $(LIBS) -shared -Wl,-soname,udp_input.so.1 -o $@ $< -lc
	rm udp_input.o
	
udp_input.o: udp_input.c
	$(CC) $(CFLAGS) $(INCLUDE) -fPIC -c $<

clean:
	rm -f udp_input.so

