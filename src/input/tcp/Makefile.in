################################################
# Makefile for the ipfixcol tcp input plugin   #
################################################

CC      = @CC@

# build with TLS support if user wishes so
TLS_SUPPORT=@TLS_SUPPORT@
ifeq ($(TLS_SUPPORT), yes)
  CFLAGS  = @CFLAGS@ `pkg-config --cflags libssl` -DTLS_SUPPORT
  LIBS    = @LIBS@ `pkg-config --libs libssl`
else
  CFLAGS  = @CFLAGS@
  LIBS    = @LIBS@
endif

INCLUDE = "-I../../../"

prefix = @prefix@
exec_prefix = @exec_prefix@
datarootdir = @datarootdir@
datadir = @datadir@
bindir = @bindir@
includedir = @includedir@
libdir =  @libdir@
mandir = @mandir@

TARGETS = ipfixcol_tcp_input.so
TOPDIR = @CONFIGURE_PWD@
NAME = @PACKAGE_NAME@
RELEASE = @RELEASE@
INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
VERSION = $(shell cut -f1 $(TOPDIR)/VERSION | tr -d '\n')
DIR = "src/input/tcp"

SRCS = tcp_input.c
OBJ = tcp_input.o

all: ipfixcol_tcp_input.so

ipfixcol_tcp_input.so: tcp_input.o
	$(CC) $(CFLAGS) $(LIBS) -shared -Wl,-soname,ipfixcol_tcp_input.so.1 -o $@ $< -lc
	
$(OBJ): $(SRCS)
	@for i in $(SRCS); do \
		$(CC) $(CFLAGS) $(INCLUDE) -fPIC -c $$i; \
	done;

clean:
	rm -f $(TARGETS) $(OBJ)

.PHONY: tarball-prepare
tarball-prepare:
	@for i in Makefile.in $(SRCS) $(MANSRCS) $(DOC); do \
		[ -d $(TOPDIR)/$(NAME)-$(VERSION)/$(DIR) ] || \
		mkdir -p $(TOPDIR)/$(NAME)-$(VERSION)/$(DIR) -p; \
		cp $$i $(TOPDIR)/$(NAME)-$(VERSION)/$(DIR)/$$i; \
	done;

.PHONY: install
install: $(TARGETS)
	[ -d $(DESTDIR)/$(libdir) ] || \
		(mkdir -p $(DESTDIR)/$(libdir); chmod 755 $(DESTDIR)/$(libdir));
	$(INSTALL_PROGRAM) $(TARGETS) $(DESTDIR)/$(libdir)/;
